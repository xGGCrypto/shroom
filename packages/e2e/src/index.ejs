<!DOCTYPE html>
<html>
  <head>
    <style>
      head,
      body {
        margin: 0;
        padding: 0;
      }

      * {
        box-sizing: border-box;
      }

      .FullScreen {
        display: grid;
        grid-template-rows: 1fr;
        grid-template-columns: 1fr;
        height: 100vh;
        width: 100vw;
        overflow: hidden;
      }

      .Icon {
        width: 16px;
        height: 16px;
        position: absolute;
        right: 0;
        top: 0;
        bottom: 0;

        display: flex;
        align-items: center;
        justify-content: center;

        /* transform: rotateZ(${(props) => (props.open ? "0" : "-90")}deg); */

        * {
          height: 20px;
          width: 20px;
        }
      }

      .Level0Box {
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        padding: 16px;
      }

      .activeCss {
        color: white;
      }

      .Title {
        position: relative;
        font-family: Arial;
        color: rgba(255, 255, 255, 0.66);
        margin-bottom: 4px;

        &:last-child {
          margin-bottom: 0;
        }

        margin-top: 4px;

        /* ${(props) => (props.active ? activeCss : undefined)} */
      }

      .Content {
        display: grid;
        grid-template-columns: 1fr 3fr;
        grid-template-rows: 1fr;
        height: 100vh;
        width: 100vw;
      }

      .LeftNavigation {
        background: #141414;
      }
    </style>
  </head>
  <body>
    <div id="root"></div>
  </body>
</html>
